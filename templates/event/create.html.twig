{% extends 'base.html.twig' %}

{% block title %}Créer un événement
{% endblock %}

{% block body %}
	<div class="container mt-5 mb-5" style="max-width: 700px;">
		<h2 class="mb-4 text-center">Proposer un événement</h2>

		<div class="card shadow-sm">
			<div class="card-body">
				{{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}

				{{ form_widget(form, {'attr': {'class': 'form-control mb-3'}}) }}

				<div class="d-grid">
					<button class="btn btn-success mt-3">Envoyer</button>
				</div>

				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}
